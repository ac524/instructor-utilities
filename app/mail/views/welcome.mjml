<mjml>
  <mj-body background-color="#fdfdfd">

    <!-- Logo Header -->
    <mj-section>
        <mj-image href="[homeUrl]" width="140px" src="[homeUrl]/images/logo-color.png"></mj-image>
    </mj-section>

    <!-- Body -->
    <mj-section background-color="#FFFFFF" border="1px solid #f0f0f0">
        <mj-column>
            <mj-text font-size="20px" color="#626262">
                Welcome to Classroom!
            </mj-text>
            <mj-text>
                [name], we are so excited you've decided to take your student management to the next level! Please click the button below to verify your email and get started with your new classroom.
            </mj-text>
            <mj-button href="[verificationLink]" font-family="Helvetica" background-color="#067CAC" color="white" align="left">
                My email is valid. Enter my classroom!
            </mj-button>
        </mj-column>
    </mj-section>

  </mj-body>
</mjml>