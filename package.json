{
  "name": "crsm",
  "version": "0.7.2",
  "description": "Classroom student management utilities for instructors to effectively organize and keep track of student progress with a team of staff members.",
  "main": "app/server.js",
  "_moduleAliases": {
    "~crsm": "app",
    "~crsmmodels": "app/controllers/definitions/models",
    "~crsmtest": "test"
  },
  "scripts": {
    "envsetup": "node envsetup",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node app/server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node seed",
    "seed:reset": "node app/seed/reset",
    "install": "cd client && npm install",
    "postinstall": "link-module-alias",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build",
    "test": "node test/run"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^6.2.0",
    "inquirer": "^8.1.0",
    "link-module-alias": "^1.2.0",
    "mocha": "^8.4.0",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "sinon": "^10.0.0",
    "sinon-chai": "^3.7.0"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.4.4",
    "apollo-server-core": "^3.5.0",
    "apollo-server-express": "^3.5.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "crypto": "^1.0.1",
    "dotenv": "^9.0.2",
    "express": "^4.16.3",
    "fastest-validator": "^1.11.0",
    "graphql": "^15.7.2",
    "graphql-modules": "^2.0.0",
    "graphql-type-json": "^0.3.2",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "mjml": "^4.9.3",
    "mongoose": "^5.12.11",
    "nodemailer": "^6.6.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "socket.io": "^4.1.2"
  }
}
