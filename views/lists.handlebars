    <input id="log-in-email" class="form-control mr-sm-2" type="email" placeholder="Email" aria-label="log-in-email">
    <input id="log-in-password" class="form-control mr-sm-2" type="password" placeholder="Password" aria-label="log-in-password">
    <button id="submit" class="btn btn-outline-success my-2 my-sm-0" type="submit">Submit</button>
  </form>
